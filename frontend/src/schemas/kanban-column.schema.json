{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KanbanColumn",
  "type": "object",
  "required": ["id", "title", "cards", "version"],
  "properties": {
    "version": { "type": "string" },
    "id": { "type": "string" },
    "title": { "type": "string" },
    "color": { "type": "string" },
    "purpose": { "type": "string" },
    "cards": {
      "type": "array",
      "items": { "$ref": "kanban-card.schema.json" }
    }
  },
  "additionalProperties": false
}
